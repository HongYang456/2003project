<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp">

        <ImageView
            android:id="@+id/special_item_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="-8dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/special_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关爱"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/special_item_img" />

        <TextView
            android:id="@+id/special_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="￥"
            android:textColor="@color/theme"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/special_item_name"
            app:layout_constraintTop_toBottomOf="@id/special_item_img" />

        <TextView
            android:id="@+id/special_item_jiex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="专业"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/special_item_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>